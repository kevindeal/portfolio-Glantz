{% if block %}
  {% set block_base_class = block.base_class|default('c-block') %}

  <div class="{{ bem_classes(block_base_class, block.element, block.modifiers, block.extra) }}" bp="grid">
    {% if block.figure.link %}
      <div class="{{ bem_classes(block_base_class, 'image') }}" bp="3">
        {% if block.figure.type %}
          <div class="{{ bem_classes(block_base_class, 'media') }}">
            {% include "@atoms/images/image/figure.twig" with block %}
            {% include "@atoms/images/icons/icon.twig" with {
              "icon": {
                "name": block.figure.type ~ "-circle",
                "modifiers": [
                  "xlarge"
                ]
              }
            } %}
          </div>
        {% else %}
          {% include "@atoms/images/image/figure.twig" with block %}
        {% endif %}
      </div>
    {% endif %}
    <div class="{{ bem_classes(block_base_class, 'content') }} u-spacing--half" bp="9">
      {% if block.kicker.text %}
        <div class="{{ bem_classes(block_base_class, 'kicker') }}">
          {% include "@atoms/text/kicker/kicker.twig" with block %}
        </div>
      {% endif %}
      {% if block.heading.text %}
        <div class="{{ bem_classes(block_base_class, 'heading') }}">
          {% include "@atoms/text/heading/heading.twig" with block %}
        </div>
      {% endif %}
      {% if block.dek.text %}
        <div class="{{ bem_classes(block_base_class, 'dek') }}">
          {% include "@atoms/text/dek/dek.twig" with block %}
        </div>
      {% endif %}
      {% if block.meta.author.name or block.meta.date %}
        <div class="{{ bem_classes(block_base_class, 'meta') }}">
          {% include "@atoms/text/meta/meta.twig" with block %}
        </div>
      {% endif %}
      {% if block.button.url %}
        <div class="{{ bem_classes(block_base_class, 'button') }}">
          {% include "@atoms/buttons/button.twig" with block %}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
