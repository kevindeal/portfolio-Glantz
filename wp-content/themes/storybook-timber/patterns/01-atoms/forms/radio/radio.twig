{% if radio %}
  {% set radio_base_class = radio.base_class|default('o-form-item') %}

  <div class="{{ bem_classes(radio_base_class, 'radio') }}">
    <input id="radio-{{ radio.id }}" type="radio" name="{{ radio.name }}"{% if radio.checked %} checked="checked"{% endif %}>
    <label for="radio-{{ radio.id }}" aria-label="{{ radio.text }}">{{ radio.text }}</label>
  </div>
{% endif %}
