{% if checkbox %}
  {% set checkbox_base_class = checkbox.base_class|default('o-form-item') %}

  <div class="{{ bem_classes(checkbox_base_class, 'checkbox') }}">
    <input id="checkbox-{{ checkbox.id }}" name="{{ checkbox.id }}" type="checkbox"{% if checkbox.checked %} checked="checked"{% endif %}>
    <label for="checkbox-{{ checkbox.id }}" aria-label="{{ checkbox.text }}">{{ checkbox.text }}</label>
  </div>
{% endif %}
